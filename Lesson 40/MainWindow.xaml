<Window x:Class="Lesson_40.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:local="clr-namespace:Lesson_40"
        mc:Ignorable="d"
        Title="Форма регистрации" Height="407" Width="400">
    <Canvas Margin="0,0,0,-6">
        <TextBox  x:Name="NameTextBox" materialDesign:HintAssist.Hint="Имя"
           Canvas.Left="25" Canvas.Top="51" HorizontalAlignment="Center"
                  VerticalAlignment="Top" Width="350"/>

        <TextBox  x:Name="SurNameTextBox" materialDesign:HintAssist.Hint="Фамилия"
          Canvas.Left="25" Canvas.Top="108" HorizontalAlignment="Center"
          VerticalAlignment="Top" Width="350"/>

        <TextBox  x:Name="AgeTextBox" materialDesign:HintAssist.Hint="Возраст"
        Canvas.Left="25" Canvas.Top="174" HorizontalAlignment="Center"
        VerticalAlignment="Top" Width="350" RenderTransformOrigin="0.511,-0.238"/>
        <Button Content="Зарегистрироваться" Canvas.Left="209" Canvas.Top="337" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <DatePicker
        Width="350" materialDesign:HintAssist.Hint="Дата"
        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Canvas.Left="25" Canvas.Top="230" 
            HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.514,-0.09" />

        <PasswordBox
        x:Name="FloatingPasswordBox"
        materialDesign:HintAssist.Hint="Пароль"
        materialDesign:HintAssist.Foreground="Green"
        materialDesign:TextFieldAssist.UnderlineBrush="Green"
         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Canvas.Left="25" Canvas.Top="274" HorizontalAlignment="Center" VerticalAlignment="Top" Width="220" />
        <Button Content="Генерировать" Canvas.Left="252" Canvas.Top="275" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</Window>
